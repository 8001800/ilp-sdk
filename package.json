{
  "name": "switch-api",
  "version": "0.1.0",
  "description": "Simple API to stream Interledger payments between Bitcoin, Ethereum and XRP",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build",
    "!build/__tests__"
  ],
  "scripts": {
    "build": "tsc",
    "fix": "run-s format lint",
    "format": "prettier --write 'src/**/*.ts' ava.config.js package.json tsconfig.json tslint.json",
    "lint": "tslint --fix --project .",
    "test": "nyc ava",
    "test-inspect": "node --inspect-brk=9231 node_modules/ava/profile.js --serial"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kava-Labs/switch-api.git"
  },
  "author": "Kincaid O'Neil <kincaid@kava.io> (https://kincaidoneil.com/)",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/Kava-Labs/switch-api/issues"
  },
  "homepage": "https://github.com/Kava-Labs/switch-api#readme",
  "dependencies": {
    "@kava-labs/crypto-rate-utils": "^2.0.2",
    "@kava-labs/ilp-plugin-xrp-asym-client": "^1.7.0",
    "axios": "^0.18.0",
    "bignumber.js": "^7.2.1",
    "ethereumjs-util": "^6.1.0",
    "eventemitter2": "^5.0.1",
    "eventemitter3": "^3.1.0",
    "fp-ts": "^1.13.0",
    "ilp-packet": "^3.0.8",
    "ilp-plugin-ethereum": "file:../ilp-plugin-ethereum",
    "ilp-plugin-lightning": "^1.0.0-beta.21",
    "ilp-plugin-xrp-paychan-shared": "^4.1.1",
    "ilp-protocol-ildcp": "^2.0.1",
    "ilp-protocol-stream": "github:interledgerjs/ilp-protocol-stream#3fe1f02273c8ac60927d902c7a88c45111c5699b",
    "oer-utils": "^4.0.0",
    "ripple-keypairs": "^0.11.0",
    "ripple-lib": "^1.1.2",
    "rxjs": "^6.4.0",
    "unionize": "^2.1.2",
    "web3": "1.0.0-beta.37"
  },
  "devDependencies": {
    "@types/google-protobuf": "^3.2.7",
    "@types/node": "^10.12.21",
    "@types/protobufjs": "^5.0.31",
    "@types/web3": "^1.0.18",
    "ava": "^1.2.0",
    "codecov": "^3.1.0",
    "envkey": "^1.2.2",
    "husky": "^1.3.1",
    "npm-run-all": "^4.1.3",
    "nyc": "^13.3.0",
    "prettier": "^1.16.3",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.3.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run fix"
    }
  }
}
