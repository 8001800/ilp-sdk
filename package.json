{
  "name": "switch-api",
  "version": "0.1.0",
  "description": "Simple API to stream Interledger payments between Bitcoin, Ethereum and XRP",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "fix": "run-s format lint",
    "format": "prettier --write 'src/**/*.ts' package.json tsconfig.json tslint.json .prettierrc",
    "lint": "tslint --fix --project .",
    "test": "nyc ava",
    "test-inspect": "node --inspect-brk node_modules/ava/profile.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Kava-Labs/switch-api.git"
  },
  "author": "Kincaid O'Neil <kincaid@kava.io>",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/Kava-Labs/switch-api/issues"
  },
  "homepage": "https://github.com/Kava-Labs/switch-api#readme",
  "dependencies": {
    "bignumber.js": "^7.2.1",
    "eventemitter3": "^3.1.0",
    "ilp-logger": "^1.1.2",
    "ilp-packet": "^3.0.1",
    "ilp-plugin-ethereum": "^3.0.0-beta.7",
    "ilp-plugin-lightning": "1.0.0-beta.11",
    "ilp-plugin-mini-accounts": "^3.5.2",
    "ilp-plugin-xrp-asym-client": "^1.5.4",
    "ilp-plugin-xrp-paychan-shared": "^4.1.1",
    "ilp-protocol-ildcp": "^2.0.0",
    "ilp-protocol-stream": "github:interledgerjs/ilp-protocol-stream#ko-receive-only-tests",
    "ripple-keypairs": "^0.11.0",
    "ripple-lib": "^1.0.2",
    "web3": "1.0.0-beta.36"
  },
  "devDependencies": {
    "@types/node": "^10.11.7",
    "ava": "^1.0.0-rc.1",
    "axios": "^0.18.0",
    "envkey": "^1.2.2",
    "husky": "^1.1.2",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-immutable": "^4.8.0",
    "typescript": "^3.1.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run fix"
    }
  }
}
